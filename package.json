{
  "name": "alitacodechat",
  "displayName": "AlitaCodeChat",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "alitacode",
          "title": "AlitaCode",
          "icon": "static/icon.png"
        }
      ]
    },
    "views": {
      "alitacode": [
        {
          "type": "webview",
          "id": "alitacodechat.view",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "alitacodechat.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vsce": "npx vsce package",
    "vscode:prepublish": "npm run package",
    "package": "npm run build",
    "build": "npx lerna run build",
    "build-watch": "npm run build:extension:dev && npm run watch-all",
    "build:extension:dev": "npx lerna run --scope alitacodechat build:dev --stream",
    "watch-all": "concurrently --kill-others \"npm:watch:ui\" \"npm:watch:extension\" ",
    "watch:ui": "npx lerna run --scope alitacodechat-ui watch:ui",
    "watch:extension": "npx lerna run --scope alitacodechat watch",
    "lint": "npx lerna run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "lerna": "^8.1.2"
  },
  "dependencies": {
    "html-modifier": "^1.2.0"
  }
}
